{
  "schema": "2.0",
  "config": {
    "update_multi": true,
    "style": {
      "text_size": {
        "normal_v2": {
          "default": "normal",
          "pc": "normal",
          "mobile": "heading"
        }
      }
    }
  },
  "body": {
    "direction": "vertical",
    "padding": "12px 12px 12px 12px",
    "elements": [
      {
        "tag": "hr",
        "margin": "0px 0px 0px 0px"
      },
      {
        "tag": "div",
        "text": {
          "tag": "plain_text",
          "content": "${text}",
          "text_size": "normal_v2",
          "text_align": "left",
          "text_color": "default"
        },
        "margin": "0px 0px 0px 0px"
      }
    ]
  },
  "header": {
    "title": {
      "tag": "plain_text",
      "content": "当前案件：${case}"
    },
    "subtitle": {
      "tag": "plain_text",
      "content": ""
    },
    "template": "red",
    "padding": "12px 12px 12px 12px"
  }
}